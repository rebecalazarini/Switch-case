#include <stdio.h>
int main() {
    
    int a,b;
    float peso;
    float altura;
    
    printf("Digite 1 ou 2 sendo:\n 1-masculino\n 2-feminino\n ");
    scanf("%d", &a);
    
     switch (a) 
    {
        case 1:
        printf("Digite seu peso: ");
        scanf("%f", &peso);
        printf("Digite a sua altura: ");
        scanf("%f", &altura);
        
        b=(72.7 * altura) - 58;
        
        printf("Seu peso ideal é esse: %d", b);
        break;
        
        case 2:
        printf("Digite seu peso: ");
        scanf("%f", &peso);
        printf("Digite a sua altura: ");
        scanf("%f", &altura);
        
        b=(62.1 * altura) - 44.7;
        
        printf("Seu peso ideal é esse: %d", b);
        break;
    }
    return 0;
}
